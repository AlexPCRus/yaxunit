#Область СлужебныйПрограммныйИнтерфейс

Процедура ИсполняемыеСценарии() Экспорт
	
	ЮТТесты
		.ДобавитьТест("ПроверкаПростогоМассива")
		.ДобавитьТест("ПроверкаМассиваСтруктур")
	;
		
КонецПроцедуры

Процедура ПроверкаПростогоМассива() Экспорт
	
	ЮТест.ОжидаетЧтоКоллекция(ЮТОбщий.ЗначениеВМассиве(1, 2, 3))
		.ИмеетДлину(3)
		.Элемент(1).Равно(2)
	;
	
КонецПроцедуры

Процедура ПроверкаМассиваСтруктур() Экспорт
	
	Ключи = "Строка, Число, Дата";
	Данные = Новый Массив();
	
	Данные.Добавить(Новый Структура(Ключи, "1", 1, '00010101'));
	Данные.Добавить(Новый Структура(Ключи, "2", 2, '00020101'));
	Данные.Добавить(Новый Структура(Ключи, "3", 3, '00030101'));
	Данные.Добавить(Новый Структура(Ключи, "3", 4, '00040101'));
	
	ЮТест.ОжидаетЧтоКоллекция(Данные)
		.ИмеетДлину(4)
		.КаждыйЭлемент()
			.ИмеетТип("Структура")
			.ИмеетСвойство("Строка")
			.ИмеетСвойство("Число")
			.ИмеетСвойство("Дата")
		.Элемент(2).Соответствует(Предикат()
				.Реквизит("Число").Равно(3)
				.Реквизит("Дата").Равно('00030101'))
		.Элемент(Новый Структура("Строка", "3")).Соответствует(Предикат()
				.Реквизит("Число").Равно(3))
		.КаждыйЭлемент(Новый Структура("Строка", "3"))
			.Соответствует(Предикат()
			.Реквизит("Число").Больше(3))
		;
	
КонецПроцедуры

#КонецОбласти

#Область СлужебныеПроцедурыИФункции

Функция Предикат()
	Возврат ЮТест.Предикат();
КонецФункции

#КонецОбласти
